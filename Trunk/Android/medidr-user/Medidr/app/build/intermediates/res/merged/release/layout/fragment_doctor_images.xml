<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.medidr.user.ui.fragment.DoctorImagesFragment">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:id="@+id/linear1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="20dp"
            android:gravity="center_horizontal|center_vertical">

            <ImageView
                android:id="@+id/imgFullSize"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear2"
            android:layout_width="fill_parent"
            android:layout_height="100dp"
            android:orientation="horizontal"
            android:gravity="center_horizontal|center_vertical"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true">

            <ImageView
                android:id="@+id/imgThumbNail1"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginRight="10dp"/>

            <ImageView
                android:id="@+id/imgThumbNail2"
                android:layout_toRightOf="@+id/imgThumbNail1"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginRight="10dp"
                />
            <ImageView
                android:id="@+id/imgThumbNail3"
                android:layout_toRightOf="@+id/imgThumbNail2"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginRight="10dp"
                />
            <ImageView
                android:id="@+id/imgThumbNail4"
                android:layout_toRightOf="@+id/imgThumbNail3"
                android:layout_width="80dp"
                android:layout_height="80dp"
                />
        </LinearLayout>
    </RelativeLayout>
</FrameLayout>
