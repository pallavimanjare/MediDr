<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.DoctorAppointmentHomeFragment">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"

        android:paddingTop="60dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:context="com.medidr.user.ui.activity.HomeActivity"
        tools:showIn="@layout/app_bar_home">

        <RelativeLayout
            android:id="@+id/rel_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#E6E4E4"
            >

            <com.medidr.doctor.ui.CircularNetworkImageView
                android:id="@+id/docProfileImg"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="20dp"
                android:src="@drawable/doctor_profile_pic" />



            <TextView
                android:id="@+id/doctorNameval"
                style="@style/boldtext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="doctor name val"
                android:layout_marginTop="50dp"
                android:layout_toRightOf="@+id/docProfileImg"
                android:layout_marginLeft="20dp"
                />
            <!-- Rating -->


            <TextView
                android:id="@+id/doctorIdVal"
                style="@style/boldtext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Doctor Id val"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="0dp"
                android:layout_below="@+id/doctorNameval"
                android:layout_alignStart="@+id/doctorNameval" />
        </RelativeLayout>

        <TextView
            android:id="@+id/txtAppointmentLbl"
            style="@style/boldtext"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:drawableLeft="@mipmap/edit_icon_grp"
            android:drawableRight="@mipmap/schedule_icon_grp"
            android:gravity="center_horizontal"
            android:text="Appointments"
            android:textSize="25dp" />

        <!--        <ListView
                    android:id="@+id/appointmentListView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txtAppointmentLbl"
                    android:divider="@android:color/transparent"
                    android:dividerHeight="5dp" />-->
        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#7A8B8B">


            <TextView
                android:id="@+id/appointmentDate"
                style="@style/bignormaltext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:gravity="left"
                android:singleLine="true"
                android:text="Date"
                android:textColor="#ffffff"

                />

            <TextView
                android:id="@+id/appointmentTime"
                style="@style/bignormaltext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"

                android:layout_weight="1"
                android:gravity="center"
                android:singleLine="true"
                android:text="Time"
                android:textColor="#ffffff"
                android:layout_centerHorizontal="true"
                android:layout_centerInParent="true"

                />

            <TextView
                android:id="@+id/patientName"
                style="@style/bignormaltext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/appointmentTime"
                android:gravity="right"
                android:layout_marginRight="10dp"
                android:singleLine="true"
                android:text="Patient Name"
                android:textColor="#ffffff" />


        </RelativeLayout>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/appointmentRecycler"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:scrollbars="vertical" />

    </LinearLayout>
</FrameLayout>
