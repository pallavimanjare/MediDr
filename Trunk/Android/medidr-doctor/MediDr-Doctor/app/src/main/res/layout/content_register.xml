<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="10dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_register">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="460dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <RelativeLayout
                android:id="@+id/linearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/imageView8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:layout_centerInParent="true"
                    android:src="@drawable/personal_info" />

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="right"
                    android:src="@drawable/doctors" />




            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_below="@+id/linearLayout">

                <TextView
                    android:id="@+id/errorMsg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5dp"
                    android:textColor="#ff0000"
                    style="@style/boldtext"

                    />

                <EditText
                    android:id="@+id/doctor_name"
                    style="@style/normaltext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:singleLine="true"
                    android:maxLength="100"
                    android:drawableLeft="@drawable/doctor_icon"
                    android:textCursorDrawable="@drawable/cursorcolor"
                    android:hint="Doctor Name"
                    android:drawablePadding="40dp"
                    android:textColorHint="#666666" >
                    <requestFocus />
                </EditText>


                <EditText
                    android:id="@+id/mobile"
                    style="@style/normaltext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawablePadding="40dp"
                    android:drawableLeft="@drawable/mobile_icon"

                    android:textCursorDrawable="@drawable/cursorcolor"
                    android:hint="Mobile"
                    android:inputType="number"
                    android:maxLength="10" >
                    <requestFocus />
                </EditText>

                <EditText
                    android:id="@+id/email"
                    style="@style/normaltext"
                    android:layout_width="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:maxLength="120"
                    android:textCursorDrawable="@drawable/cursorcolor"
                    android:drawableLeft="@drawable/email_icon"

                    android:hint="Email"
                    android:drawablePadding="40dp"
                    android:textColorHint="#666666"

                    >
                    <requestFocus />
                </EditText>

                <!--  <EditText
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:drawableLeft="@drawable/doctor_stethoscope"
                      android:textSize="14sp"
                      android:textColorHint="#666666"
                      android:hint="    Specialty"
                      android:gravity="left"
                      android:ems="10"
                      android:id="@+id/specialty"
                      android:layout_below="@+id/email"
                      android:layout_alignParentStart="true" />-->
                <AutoCompleteTextView
                    android:id="@+id/specialty"
                    style="@style/normaltext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:textCursorDrawable="@drawable/cursorcolor"
                    android:drawableLeft="@drawable/doctor_stethoscope"
                    android:drawablePadding="40dp"
                    android:hint="Specialty"
                    android:textColorHint="#666666">

                    <requestFocus />
                </AutoCompleteTextView>

                <EditText
                    android:id="@+id/qualification"
                    style="@style/normaltext"
                    android:layout_width="match_parent"
                    android:drawablePadding="40dp"
                    android:layout_height="wrap_content"
                    android:textCursorDrawable="@drawable/cursorcolor"
                    android:drawableLeft="@drawable/qualification_icon"
                    android:singleLine="true"
                    android:hint="Qualification"
                    android:textColorHint="#666666" >
                    <requestFocus />
                </EditText>

                <EditText
                    android:id="@+id/experience"
                    style="@style/normaltext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawablePadding="40dp"
                    android:textCursorDrawable="@drawable/cursorcolor"
                    android:drawableLeft="@drawable/exp_icon"
                    android:singleLine="true"
                    android:hint="Experience (in years)"
                    android:inputType="number"
                    android:maxLength="3"
                    android:textColorHint="#666666" >
                    <requestFocus />
                </EditText>

                <EditText
                    android:id="@+id/consultationFees"
                    style="@style/normaltext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawablePadding="40dp"
                    android:textCursorDrawable="@drawable/cursorcolor"
                    android:drawableLeft="@drawable/fees_icon"
                    android:singleLine="true"
                    android:hint="Consultation Fees"
                    android:inputType="number"
                    android:maxLength="5"
                    android:textColorHint="#666666" >
                    <requestFocus />
                </EditText>

                <EditText
                    android:id="@+id/other_info"
                    style="@style/normaltext"
                    android:layout_width="match_parent"
                    android:drawablePadding="40dp"
                    android:layout_height="wrap_content"
                    android:textCursorDrawable="@drawable/cursorcolor"
                    android:drawableLeft="@drawable/other_info_icon"
                    android:maxLength="500"
                    android:hint="Other INFO"
                    android:textColorHint="#666666" >
                    <requestFocus />
                </EditText>

            </LinearLayout>

        </RelativeLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:orientation="vertical"
        android:layout_weight="1"
        android:gravity="center|bottom">

        <ImageButton
            android:id="@+id/next_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:background="@drawable/next_button_style"
            />
    </LinearLayout>

</LinearLayout>
