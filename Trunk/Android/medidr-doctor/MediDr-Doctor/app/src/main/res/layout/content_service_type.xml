<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".ui.ServiceActivity"
    tools:showIn="@layout/activity_service_type">

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_gravity="left"
            android:src="@drawable/mobile_apps_icon" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="myriad pro regular"
            android:gravity="center"
            android:layout_centerInParent="true"
            android:text="Service type"
            android:textColor="#0f0f0f"
            android:textSize="20dp"
            android:textStyle="bold" />

    </RelativeLayout>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="20dp"
        android:text="Select service type"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        >

        <Button

            android:id="@+id/call_button"
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:layout_alignTop="@+id/book_button"
            android:layout_marginBottom="20dp"
            android:layout_toStartOf="@+id/book_button"
            android:background="@mipmap/call" />

        <Button

            android:id="@+id/book_button"
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:background="@mipmap/book" />

        <Button

            android:id="@+id/both_button"
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:layout_alignTop="@+id/book_button"

            android:layout_marginBottom="20dp"
            android:layout_marginLeft="5dp"
            android:layout_toEndOf="@+id/book_button"
            android:background="@mipmap/both" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/imageView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/call_button"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:src="@drawable/info" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:orientation="vertical"
        android:layout_weight="1"
        android:gravity="center|bottom">

        <TextView
            android:id="@+id/banlDtlsLink"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:linksClickable="true"
            android:text="@string/str_bank_details"
            android:textColor="#0198E1" />


        <CheckBox
            android:id="@+id/checkBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginTop="10dp"
            android:checked="false"
            android:focusable="true"
            android:clickable="true"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:text="Accept Terms &amp; Conditions"
            android:focusableInTouchMode="true" />


        <ImageButton
            android:id="@+id/registerButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@drawable/register_button_style"
            />

    </LinearLayout>

</LinearLayout>
