<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.medidr.doctor.ui.DoctorHospitalInfoFragment">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="20dp"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="70dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        >


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="465dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">



                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <ImageView
                        android:id="@+id/imageView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentTop="true"
                        android:layout_gravity="right"
                        android:src="@drawable/hospital" />

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Hospital Information"
                        style="@style/headerboldtext"
                        android:layout_centerVertical="true"
                        android:layout_centerHorizontal="true" />

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_marginTop="70dp">

                    <EditText
                        android:id="@+id/hospitalName"
                        style="@style/normaltext"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawablePadding="40dp"
                        android:singleLine="true"
                        android:maxLength="200"
                        android:textCursorDrawable="@drawable/cursorcolor"
                        android:drawableLeft="@drawable/hospital_small_icon"

                        android:hint="Hospital Name"
                        android:textColorHint="#666666" />

                    <EditText
                        android:id="@+id/hospitalAddress"
                        style="@style/normaltext"
                        android:singleLine="false"
                        android:maxLength="500"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawablePadding="40dp"
                        android:textCursorDrawable="@drawable/cursorcolor"
                        android:drawableLeft="@drawable/address_icon"

                        android:hint="Hospital Address"
                        android:textColorHint="#666666" />

                    <EditText
                        android:id="@+id/hospitalPincode"
                        style="@style/normaltext"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawablePadding="40dp"
                        android:singleLine="true"
                        android:textCursorDrawable="@drawable/cursorcolor"
                        android:drawableLeft="@drawable/pincode_icon"

                        android:hint="Pincode"
                        android:inputType="number"
                        android:maxLength="6"
                        android:textColorHint="#666666" />

                    <EditText
                        android:id="@+id/hospitalReceptionNumber"
                        style="@style/normaltext"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawablePadding="40dp"

                        android:textCursorDrawable="@drawable/cursorcolor"
                        android:drawableLeft="@drawable/old_phone"

                        android:hint="Reception Number"
                        android:inputType="number"
                        android:maxLength="20"
                        android:singleLine="true"
                        android:textColorHint="#666666" />


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:background="@drawable/border"
                        android:layout_height="200dp">

                        <LinearLayout
                            android:id="@+id/linearLayout2"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:gravity="center">

                            <ImageView
                                android:id="@+id/addImage1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentTop="true"
                                android:layout_marginTop="5dp"
                                android:background="@drawable/add_button_style"

                                />

                            <ImageView
                                android:id="@+id/addImage2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentTop="true"
                                android:layout_marginLeft="15dp"
                                android:layout_toRightOf="@+id/addImage1"
                                android:layout_marginTop="5dp"
                                android:background="@drawable/add_button_style"  />

                            <ImageView
                                android:id="@+id/addImage3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentTop="true"
                                android:layout_marginLeft="15dp"
                                android:layout_marginTop="5dp"
                                android:layout_toRightOf="@+id/addImage2"
                                android:background="@drawable/add_button_style"  />

                            <ImageView
                                android:id="@+id/addImage4"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentTop="true"
                                android:layout_marginLeft="15dp"
                                android:layout_marginTop="5dp"
                                android:layout_toRightOf="@+id/addImage3"
                                android:background="@drawable/add_button_style" />

                        </LinearLayout>
                        <TextView
                            android:id="@+id/textView7"
                            style="@style/boldtext"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/linearLayout2"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="10dp"
                            android:text="Upload Hospital Images"
                            android:textAppearance="?android:attr/textAppearanceLarge" />


                        <ImageButton
                            android:id="@+id/arrowLeftButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/left_button_style"
                            android:layout_marginLeft="10dp"
                            android:layout_alignTop="@+id/arrowRightButton"
                            android:layout_alignParentStart="true" />

                        <ImageView
                            android:id="@+id/mainDisplayImage"
                            android:layout_width="180dp"
                            android:layout_height="100dp"
                            android:src="@mipmap/ic_person_black_24dp"
                            android:layout_alignParentBottom="true"
                            android:layout_marginBottom="10dp"
                            android:layout_centerHorizontal="true" />

                        <ImageButton
                            android:id="@+id/arrowRightButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="10dp"
                            android:background="@drawable/right_button_style"
                            android:layout_alignTop="@+id/mainDisplayImage"
                            android:layout_alignParentEnd="true"
                            android:layout_marginTop="27dp" />


                    </RelativeLayout>

                </LinearLayout>
            </RelativeLayout>
        </ScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:orientation="vertical"
            android:layout_weight="1"
            android:gravity="center|bottom">

            <ImageButton
                android:id="@+id/nxtButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:background="@drawable/save_button_style"
                />

        </LinearLayout>

    </LinearLayout>


</FrameLayout>
