<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.medidr.doctor.ui.CancelAppointmentActivity"
    tools:showIn="@layout/activity_cancel_appointment">

     <View
         android:layout_width="match_parent"
         android:layout_height="1dp"
         android:id="@+id/divider1"
         android:layout_marginBottom="10dp"
         android:layout_marginLeft="5dp"
         android:layout_marginRight="2dp"
         android:layout_marginTop="10dp"
         android:background="#bfbfbf" />

    <TextView
        android:id="@+id/appointmentDate"
        style="@style/normaltext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="5dp"
        android:drawableLeft="@mipmap/ic_insert_invitation_black_24dp"
        android:drawablePadding="20dp"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/divider1"
        android:gravity="left"
        android:text="Appointment Date"

        />

    <TextView
        android:id="@+id/appointmentDateVal"
        style="@style/normaltext"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:gravity="right"
        android:layout_below="@+id/divider1"
        android:text="valu" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:id="@+id/divider2"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="2dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/appointmentDateVal"
        android:background="#bfbfbf" />
    <TextView
        android:id="@+id/appointmentTime"
        style="@style/normaltext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/divider2"
        android:layout_marginBottom="5dp"
        android:drawableLeft="@mipmap/ic_alarm_black_24dp"
        android:drawablePadding="20dp"
        android:layout_marginTop="5dp"
        android:gravity="left"
        android:text="Appointment Time"

        />

    <TextView
        android:id="@+id/appointmentTimeVal"
        style="@style/normaltext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/divider2"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:gravity="right"

        />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:id="@+id/divider3"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="2dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/appointmentTimeVal"
        android:background="#bfbfbf" />


    <TextView
        android:id="@+id/appointmentId"
        style="@style/normaltext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/divider3"
        android:drawablePadding="20dp"
        android:layout_marginBottom="5dp"
        android:drawableLeft="@mipmap/ic_format_list_numbered_black_24dp"
        android:layout_marginTop="5dp"
        android:gravity="left"
        android:text="Appointment ID"

        />

    <TextView
        android:id="@+id/appointmentIdVal"
        style="@style/normaltext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/divider3"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:gravity="right"

        />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:id="@+id/divider4"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="2dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/appointmentIdVal"
        android:background="#bfbfbf" />

    <TextView
        android:id="@+id/patientName"
        style="@style/normaltext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/divider4"
        android:layout_marginBottom="5dp"
        android:drawableLeft="@mipmap/ic_person_black_24dp"
        android:drawablePadding="20dp"
        android:layout_marginTop="5dp"
        android:gravity="left"
        android:text="Patient Name"

        />

    <TextView
        android:id="@+id/patientNameVal"
        style="@style/normaltext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/divider4"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:gravity="right"

        />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:id="@+id/divider5"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="2dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/patientNameVal"
        android:background="#bfbfbf" />

    <TextView
        android:id="@+id/patientMobile"
        style="@style/normaltext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/divider5"
        android:layout_marginBottom="5dp"
        android:drawableLeft="@mipmap/ic_tablet_mac_black_24dp"
        android:drawablePadding="20dp"
        android:layout_marginTop="5dp"
        android:gravity="left"
        android:text="Patient Mobile"

        />

    <TextView
        android:id="@+id/patientMobileVal"
        style="@style/normaltext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/divider5"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:gravity="right"

        />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:id="@+id/divider6"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="2dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/patientMobileVal"
        android:background="#bfbfbf" />

    <TextView
        android:id="@+id/userName"
        style="@style/normaltext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/divider6"
        android:layout_marginBottom="5dp"
        android:drawableLeft="@mipmap/ic_person_black_24dp"
        android:drawablePadding="20dp"
        android:layout_marginTop="5dp"
        android:gravity="left"
        android:text="User Name"

        />

    <TextView
        android:id="@+id/userNameVal"
        style="@style/normaltext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/divider6"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:gravity="right"

        />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:id="@+id/divider7"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="2dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/userNameVal"
        android:background="#bfbfbf" />
    <TextView
        android:id="@+id/userMobile"
        style="@style/normaltext"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/divider7"
        android:layout_marginBottom="5dp"
        android:drawableLeft="@mipmap/ic_tablet_mac_black_24dp"
        android:drawablePadding="20dp"
        android:layout_marginTop="5dp"
        android:gravity="left"
        android:text="User Mobile"

        />

    <TextView
        android:id="@+id/userMobileVal"
        style="@style/normaltext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/divider7"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:gravity="right"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:id="@+id/divider8"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="2dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/userMobileVal"
        android:background="#bfbfbf" />

    <ImageButton
        android:id="@+id/btnCancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:background="@drawable/cancelappointment_button_style"
        />
</RelativeLayout>
