<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">


    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="#43d854" />
            <stroke
                android:width="0dp"
                android:color="#43d854" />
            <corners
                android:radius="3dp" />

        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="#43d854"
                android:endColor="#43d854"
                android:angle="270" />
            <stroke
                android:width="0dp"
                android:color="#43d854" />
            <corners
                android:radius="3dp" />

        </shape>
    </item>



</selector>