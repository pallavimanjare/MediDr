<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.medidr.doctor.ui.DoctorReportRequestFragment"
    >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="80dp"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/imageView13"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@mipmap/reporting_icon"
            android:layout_above="@+id/textView5"
            android:layout_marginBottom="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Patient Appointment Report"
            android:textSize="19dp"
            android:textStyle="bold"
            android:textColor="#000000"
            />

    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/reportdetails"
        android:textColor="#000000"
        android:id="@+id/textView5"
        android:textSize="16dp"
        android:layout_above="@+id/relativeLayout4"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="15dp" />

    <RelativeLayout
        android:id="@+id/relativeLayout4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/backgrd"
        android:layout_marginBottom="15dp"
        android:layout_above="@+id/getReport"
        android:layout_alignParentStart="true">


        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="fill_parent"
            android:layout_height="45dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/titleInfo"
            android:layout_centerHorizontal="true"
            android:background="@color/tableColor"
            android:orientation="horizontal"
            android:layout_marginBottom="15dp">

            <TextView
                android:id="@+id/textView13"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                style="@style/boldtext"
                android:layout_weight="1"
                android:padding="10dp"
                android:text="From"
                android:textColor="@color/titleColor"
                android:textSize="@dimen/tableInfo" />

            <TextView
                android:id="@+id/textView14"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                style="@style/boldtext"
                android:layout_weight="1"
                android:padding="10dp"
                android:layout_marginRight="50dp"
                android:layout_alignParentRight="true"
                android:gravity="right"
                android:text="To"
                android:textColor="@color/titleColor"
                android:textSize="@dimen/tableInfo" />

        </LinearLayout>


        <TextView
            android:id="@+id/errorMsg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linearLayout2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:textColor="#ff0000"
            style="@style/boldtext"
            />

        <EditText
            android:id="@+id/fromdate"
            style="@style/normaltext"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_alignParentLeft="true"
            android:drawableRight="@drawable/calendar"
            android:hint="Select Date"
            android:textColorHint="#666666"
            android:focusableInTouchMode="false"
            android:focusable="false"
            android:layout_below="@+id/errorMsg"
            android:layout_alignParentStart="true" />

        <EditText
            android:id="@+id/todate"
            style="@style/normaltext"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:drawableRight="@drawable/calendar"
            android:hint="Select Date"
            android:layout_marginRight="10dp"
            android:textColorHint="#666666"
            android:layout_below="@+id/errorMsg"
            android:focusableInTouchMode="false"
            android:focusable="false" />



    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:orientation="vertical"
        android:layout_weight="1"
        android:gravity="center|bottom">

        <ImageButton
            android:id="@+id/getReport"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/submit_button_style"
            android:layout_above="@+id/relativeLayout5"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"/>

        <RelativeLayout
            android:id="@+id/relativeLayout5"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/backgrd"
            android:layout_gravity="center"
            android:gravity="center_horizontal"
            android:layout_above="@+id/textView15"
            android:layout_alignParentStart="true">

            <TextView
                android:id="@+id/txtdownloadlnk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/boldtext"
                android:textSize="17dp"
                android:textColor="#0198E1"
                android:text="@string/downloadReport"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/download" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Download:"
                android:id="@+id/download"
                android:textSize="17dp"
                android:textColor="#000000"
                android:layout_alignTop="@+id/txtdownloadlnk"
                android:layout_alignParentStart="true" />
        </RelativeLayout>

        <TextView
            android:id="@+id/textView15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/boldtext"
            android:textStyle="italic"
            android:text="Note : Open in MS Excel Sheet"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true" />

    </LinearLayout>


</LinearLayout>
